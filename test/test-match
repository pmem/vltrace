# test/test-match -- test for strace.ebpf using match and *.match files
#

if [ "$2" == "" ]; then
	echo "Usage: $0 <test-file> <test-number>"
	exit 1
fi

TEST_NUM=$2
TEST_FILE=$1
if [ ! -x $TEST_FILE ]; then
	echo "Error: executable file '$TEST_FILE' does not exist"
	exit 1
fi

TEST_DIR=$(dirname $0)
[ "$TEST_DIR" == "." ] && TEST_DIR=$(pwd)

FUNCT=$TEST_DIR/helper_functions.sh
COMMON=$TEST_DIR/common.sh
[ ! -f $COMMON -o ! -f $FUNCT ] \
	&& echo "Error: one of files is missing: $COMMON or $FUNCT" \
	&& exit 1

source $COMMON
source $FUNCT

PATTERN_START="close 0000000012345678"
PATTERN_END="close 0000000087654321"
OUT=output$TEST_NUM.log

require_superuser

# match files will be copied later
rm -f *$TEST_NUM.log*

echo "# sudo bash -c \"$RUN_STRACE -o $OUT $TEST_FILE $TEST_NUM\""
sudo bash -c "$RUN_STRACE -o $OUT $TEST_FILE $TEST_NUM"

case $TEST_NUM in
# tests with one fork()
1|3)
	split_forked_file $OUT outA$TEST_NUM.log outB$TEST_NUM.log cutF$TEST_NUM.log
	cut_part_file outA$TEST_NUM.log "$PATTERN_START" "$PATTERN_END" > cutA$TEST_NUM.log
	cut_part_file outB$TEST_NUM.log "$PATTERN_START" "$PATTERN_END" > cutB$TEST_NUM.log
	;;
# tests without fork()
*)
	cut_part_file $OUT "$PATTERN_START" "$PATTERN_END" > cut_$TEST_NUM.log
	;;
esac

check
